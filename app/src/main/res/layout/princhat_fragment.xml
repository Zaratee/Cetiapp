<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/letreroChats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chats"
        android:textSize="40dp"
        android:textColor="#000"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/txtV_btnIngresarChat"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/letreroChats"
        android:textSize="30dp"
        android:background="#DFDFDF"/>
    <TextView
        android:id="@+id/txtV_btnChat"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/letreroChats"
        android:layout_toEndOf="@+id/imgV_Chatimagen1stAct"
        android:text="@string/Semestre"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/txtV_btnChatpt2"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/letreroChats"
        android:layout_toEndOf="@+id/txtV_btnChat"
        android:layout_marginLeft="10dp"
        android:text="@string/Grupo"
        android:textSize="30dp" />


    <ImageView
        android:id="@+id/imgV_Chatimagen1stAct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/letreroChats"
        android:background="@drawable/chatdentro" />
</RelativeLayout>