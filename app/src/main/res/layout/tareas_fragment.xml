<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtV_Tareas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tareas"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textColor="#000"
        />
    <EditText
        android:id="@+id/etxt_tarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Escribir tarea"
        android:layout_below="@+id/txtV_Tareas"/>
    <ListView
        android:id="@+id/lstV_tareas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btn_mandarTarea">
    </ListView>
    <Button
        android:id="@+id/btn_mandarTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar tarea"
        android:layout_below="@+id/etxt_tarea"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>