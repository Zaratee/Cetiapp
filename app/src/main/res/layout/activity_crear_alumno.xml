<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crearAlumnoAct">
    <Spinner
        android:id="@+id/spin_Carrera"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etxt_contrase単aCrearAlumno"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/etxt_contrase単aCrearAlumno">
    </Spinner>

    <Spinner
        android:id="@+id/spin_Semestre"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spin_Carrera"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/spin_Carrera">
    </Spinner>

     <Spinner
         android:id="@+id/spin_Grupo"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:layout_below="@+id/spin_Carrera"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="15dp"
         android:layout_alignRight="@+id/spin_Carrera">
     </Spinner>

    <TextView
        android:id="@+id/txtV_CrearAlumno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Crear Alumno"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        />
    <EditText
        android:id="@+id/etxt_nombreCrearAlumno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtV_CrearAlumno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Nombre"/>
    <EditText
        android:id="@+id/etxt_apellidoCrearAlumno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_nombreCrearAlumno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Apellido"/>

    <EditText
        android:id="@+id/etxt_registroCrearAlumno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_apellidoCrearAlumno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Registro"/>

    <EditText
        android:id="@+id/etxt_contrase単aCrearAlumno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_registroCrearAlumno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:hint="Contrase単a"/>


    <Button
        android:id="@+id/btn_adminCrearAlumno"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spin_Semestre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Crear"/>

</RelativeLayout>